[Unit]
Description=oxidizedRAG self-hosted CI runner
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/oxidizedRAG
Environment=REPO_DIR=/opt/oxidizedRAG
Environment=BRANCH=develop
Environment=POLL_SECONDS=60
EnvironmentFile=-/etc/oxidizedrag-ci.env
ExecStart=/opt/oxidizedRAG/ci/runner.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
